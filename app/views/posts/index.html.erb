<h1 class= "my-4">Posts</h1>

<button type="button" class="btn btn-danger btn-sm my-3 ml-auto"><%= link_to 'New Post', posts_new_path %></button>

<table class="table table-bordered">
    <thead class="bg-danger text-white">
        <tr>
            <th>Título</th>
            <th>Fecha creación</th>
            <th>Imagen</th>
            <th>Contenido</th>
        </tr>
    </thead> 
    <% @posts.present? && @posts.each do |post|%>
        <tr>
            <td><%= post.title%></td>
            <td><%= post.created_at%></td>
            <td><%=image_tag post.image_url%></td>
            <td><%= post.content%></td>
        </tr>
    <% end %>
</table>


